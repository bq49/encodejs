@import "../../styles/lvsTitle.wxss";

.service {
  border-top: 20rpx solid #f0eff5;
  border-bottom: 2rpx solid #e8e8e8;
  height: 120rpx;
  display: flex;
  align-items: center;
  padding: 0 24rpx;
}
.service-title {
  padding-right: 44rpx;
  font-size: 30rpx;
  color: #373737;
}
.stars-list {
  display: flex;
  flex: 1;
}
.stars-list .iconfont {
  font-size: 64rpx;
  margin-right: 27rpx;
}
.stars-list .icon-xingxing {
  color:#ffaa23;
}
.user-evaluate {
  padding: 24rpx;

}
.user-evaluate .h2 {
  margin-bottom: 42rpx;
  color:#373737;
  font-size: 30rpx;
  display: block;
}
.block-evaluate {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}
.block-evaluate text {
  height: 64rpx;
  width: 195rpx;
  border:1px solid #a3a3a3;
  border-radius: 10rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  color: #6d6d6d;
  margin-bottom: 30rpx;
}
.block-evaluate text.active{
   border-color: #577eff;
   color: #577eff;
}
.test {
  margin-top: 24rpx;
  padding: 0 24rpx;
  display: flex;
}
.test textarea{
  flex: 1;
  height: 308rpx;
  border:1px solid #e8e8e8;
  padding: 20rpx;
  font-size: 30rpx;
  color: #333;
}
.p-class {
  font-size: 28rpx;
  color: #a9a9a9;
}
.submit {
  width: 90%;
  height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #577eff;
  color: #fff;
  margin: 40rpx auto 0;
  border-radius: 10rpx;
}